extends /layouts/tables.pug

block table-content
    .row.mt-3
      .col-12.m-0
        .card.mb-3
            .card-body.p-0
                table.table.table-hover.table-borderless.p-0.m-0(style={'font-size': '.875rem'})
                  thead.thead-light
                    tr
                      th Full Name
                      th Email
                      th Created At
                  tbody
                    each user in users
                      tr
                        td
                          a(href= urlFor('showUser', { id: user.id }))= user.fullName
                        td= user.email
                        td= formatDate(user.createdAt)
    .row
      .col-12
        +pagination('users', paginationObject)
